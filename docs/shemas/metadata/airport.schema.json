{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Airport Metadata (Canonical)",
  "type": "object",
  "additionalProperties": true,
  "required": ["airport_icao", "latitude_deg", "longitude_deg"],
  "properties": {
    "airport_icao": {
      "type": "string",
      "minLength": 4,
      "maxLength": 4,
      "description": "ICAO airport code (4 letters)."
    },
    "airport_iata": {
      "type": ["string", "null"],
      "minLength": 3,
      "maxLength": 3
    },
    "airport_name": {
      "type": ["string", "null"]
    },
    "city": {
      "type": ["string", "null"]
    },
    "country": {
      "type": ["string", "null"]
    },
    "region": {
      "type": ["string", "null"],
      "description": "Optional region/state/province."
    },
    "latitude_deg": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "longitude_deg": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    },
    "elevation_ft": {
      "type": ["number", "null"]
    },
    "last_updated_utc": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "source": {
      "type": ["string", "null"]
    }
  }
}
